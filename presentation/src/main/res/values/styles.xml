<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PanelTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/theme_panel</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PanelTheme.Form" parent="PanelTheme">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/theme_form</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/theme_edit_text</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/theme_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ButtonTheme.Accept.Stroke" parent="ButtonTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/theme_button_primary_stroke</item>
    </style>

    <style name="ButtonTheme.Cancel" parent="ButtonTheme">
        <item name="android:background">@drawable/theme_button_cancel</item>
    </style>

    <style name="TextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextViewTheme.Title" parent="TextViewTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTheme.Title.Primary" parent="TextViewTheme.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewTheme.Title.Primary.H1" parent="TextViewTheme.Title.Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewTheme.Title.Primary.H3" parent="TextViewTheme.Title.Primary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewTheme.Title.Black" parent="TextViewTheme.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewTheme.Message" parent="TextViewTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewTheme.Text.Black.h5" parent="TextViewTheme">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SeparatorTheme" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
