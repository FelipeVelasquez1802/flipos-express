<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/PanelTheme.Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCost"
            style="@style/TextViewTheme.Text.Black.h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cost_message"
            app:drawableStartCompat="@drawable/ic_baseline_monetization_on_24" />

        <TextView
            android:id="@+id/tvOrderCost"
            style="@style/TextViewTheme.Text.Black.h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_cost_message"
            app:drawableStartCompat="@drawable/ic_baseline_monetization_on_24" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/TextViewTheme.Text.Black.h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            app:drawableStartCompat="@drawable/ic_baseline_list_alt_24" />

        <Button
            android:id="@+id/btFinish"
            style="@style/ButtonTheme.Accept.Stroke"
            android:text="@string/finish" />

    </LinearLayout>

</RelativeLayout>