<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/PanelTheme.Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCost"
            style="@style/TextViewTheme.Text.Black.h4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/ivMoreOption"
            android:text="@string/cost_message"
            app:drawableStartCompat="@drawable/ic_baseline_monetization_on_24" />

        <ImageView
            android:id="@+id/ivMoreOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:contentDescription="@string/contentDescription" />

        <TextView
            android:id="@+id/tvOrderCost"
            style="@style/TextViewTheme.Text.Black.h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCost"
            android:text="@string/order_cost_message"
            app:drawableStartCompat="@drawable/ic_baseline_monetization_on_24" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/TextViewTheme.Text.Black.h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOrderCost"
            android:text="@string/description"
            app:drawableStartCompat="@drawable/ic_baseline_list_alt_24" />

        <Button
            android:id="@+id/btFinish"
            style="@style/ButtonTheme.Accept.Stroke"
            android:layout_below="@id/tvDescription"
            android:text="@string/finish" />

    </RelativeLayout>

</RelativeLayout>